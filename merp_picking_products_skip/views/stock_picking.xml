<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- All Operations -->

        <record id="view_picking_form_products_skip" model="ir.ui.view">
            <field name="name">stock.picking.form.products.skip</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='pack_operation_ids']/.." position="attributes">
                    <attribute name="attrs">{'invisible': [('pack_operation_ids','=',[])]}</attribute>
                </xpath>
                <xpath expr="//field[@name='pack_operation_ids']/tree" position="attributes">
                    <attribute name="create">false</attribute>
                    <attribute name="delete">false</attribute>
                    <attribute name="edit">false</attribute>
                </xpath>
                <xpath expr="//field[@name='pack_operation_ids']/tree/field[@name='product_qty']" position="after">
                    <field name="skipped" />
                </xpath>
                
            </field>
        </record>

    </data>
</odoo>
