<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="stock_picking_wave.menu_action_picking_wave" model="ir.ui.menu">
            <field name="groups_id" eval="[(4, ref('merp_menu_picking_wave'))]"/>
        </record>

        <record id="view_picking_wave_form" model="ir.ui.view">
            <field name="name">stock.picking.wave.form.inherit</field>
            <field name="model">stock.picking.wave</field>
            <field name="inherit_id" ref="merp_picking_wave_base.view_picking_wave_form"/>
            <field name="arch" type="xml">
                <page name="operations" position="after">
                    <page string="To Process" name="operations_to_pick">
                        <field name="operations_to_pick" readonly="1" context="{'order_by_rs': 1}">
                            <tree>
                                <field name="picking_id"/>
                                <field name="product_id"/>
                                <field name="product_uom_id" groups="product.group_uom"/>
                                <field name="owner_id" groups="stock.group_tracking_owner"/>
                                <field name="location_id" groups="stock.group_locations,stock.group_tracking_lot"/>
                                <field name="location_dest_id" groups="stock.group_locations,stock.group_tracking_lot"/>
                                <field name="product_qty"/>
                                <field name="qty_done"/>
                            </tree>
                        </field>
                    </page>
                </page>
            </field>
        </record>

    </data>
</openerp>
